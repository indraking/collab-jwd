<div class="container section-margin p-5">
  <div class="row mb-5">
    <div class="col-6">
      <h3>Halaman Tambah Products</h3>
      <p>Perhatikan saat input data, Pastikan masukkan data dengan benar</p>
    </div>
  </div>
  <form action="/products/add" method="post">
    <input type="hidden" clss="form-control" name="id" value="" id="id" required placeholder="Masukkan ID" />
    <div class="row">
      <!-- Judul buku -->
      <div class="col-6">
        <div class="mb-3">
          <label for="judul_buku" class="form-label fw-bold">Masukkan Judul Buku</label>
          <input type="text" class="form-control" name="judul_buku" id="judul_buku" required placeholder="Masukkan nama" />
        </div>
      </div>
      <!-- penulis -->
      <div class="col-6">
        <div class="mb-3">
          <label for="penulis" class="form-label fw-bold">Penulis Buku</label>
          <input type="text" class="form-control" name="penulis" id="penulis" required placeholder="Masukkan penulis" />
        </div>
      </div>
      <!-- confirmPassword -->
      <div class="col-6">
        <div class="mb-3">
          <label for="kategori" class="form-label fw-bold">Kategori Buku</label>
          <input type="text" class="form-control" name="kategori" id="kategori" required placeholder="Masukkan kategori" />
        </div>
      </div>
      <!-- alamat -->
      <div class="col-6">
        <div class="mb-3">
          <label for="penerbit" class="form-label fw-bold">Penerbit buku</label>
          <input type="text" class="form-control" name="penerbit" id="penerbit" required placeholder="Masukkan penerbit" />
        </div>
      </div>
      <!-- alamat -->
      <div class="col-12">
        <div class="mb-3">
          <label for="harga" class="form-label fw-bold">Harga buku</label>
          <input type="text" class="form-control" name="harga" id="harga" required placeholder="Masukkan harga" />
        </div>
      </div>
    </div>
    <input type="reset" value="Reset Data" class="btn btn-danger" />
    <button class="btn btn-success">Submit Data</button>
  </form>
</div>
