<div class="container p-3" style="margin-top: 2em">
  <div class="row d-flex justify-content-evenly align-items-center mb-5">
    <div class="col-6">
      <h5 class="fw-bold">Halaman Panel Admin</h5>
      <p>Cari data terkait</p>
      <form action="/products/search" method="post">
        <div class="row">
          <div class="col-6">
            <input type="text" name="search" class="form-control" />
          </div>
          <div class="col-6">
            <button class="btn btn-success">Cari Data</button>
          </div>
        </div>
      </form>
    </div>
    <div class="col-6 text-end">
      <h4>Tambah Data Products</h4>
      <p>
        Link <span><a href="/products/add" class="text-primary">Tambah Product</a></span>
      </p>
    </div>
  </div>

  <table class="table mt-3">
    <thead class="table-success">
      <tr>
        <th scope="col">No</th>
        <th scope="col">Judul Buku</th>
        <th scope="col">Penulis</th>
        <th scope="col">Kategori</th>
        <th scope="col">Penerbit</th>
        <th scope="col">Harga</th>
        <th scope="col">Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% i=1 %> <% result.forEach((datas) => { %>
      <tr>
        <td><%= i++ %></td>
        <td><%= datas.judul_buku %></td>
        <td><%= datas.penulis %></td>
        <td><%= datas.kategori %></td>
        <td><%= datas.penerbit %></td>
        <td><%= datas.harga %></td>
        <td>
          <a href="/products/delete/<%= datas.id %> " onclick="return confirm('Anda yakin?')">
            <button class="btn btn-danger badge">Hapus Data</button>
          </a>
          <br />
          <a href="/products/edit/<%= datas.id %> ">
            <button class="btn btn-warning badge">Edit Data</button>
          </a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
