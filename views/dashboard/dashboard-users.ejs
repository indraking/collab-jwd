<div class="container" style="margin-top: 2em">
  <div class="row mb-5">
    <div class="col-6">
      <h5 class="fw-bold">Halaman Panel Admin</h5>
      <p>Cari data terkait</p>
      <form action="/users/search" method="post">
        <div class="row">
          <div class="col">
            <input type="text" name="search" class="form-control" />
          </div>

          <div class="col">
            <button class="btn btn-success">Search</button>
          </div>
        </div>
      </form>
    </div>
    <div class="col-6 text-end">
      <h4>Tambah Data Users</h4>
      <p>
        Link <span><a href="/users/add" class="text-primary">Tambah Data Users</a></span>
      </p>
    </div>
  </div>

  <table class="table mt-3">
    <thead class="table-success">
      <tr>
        <th scope="col">No</th>
        <th scope="col">Nama</th>
        <th scope="col">Email</th>
        <th scope="col">Nomor Hp</th>
        <th scope="col">Jenis Kelamin</th>
        <th scope="col">Alamat</th>
        <th scope="col">Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% i=1 %> <% result.forEach((datas) => { %>
      <tr>
        <td><%= i++ %></td>
        <td><%= datas.nama %></td>
        <td><%= datas.email %></td>
        <td><%= datas.nomor_telepon %></td>
        <td><%= datas.jenis_kelamin %></td>
        <td><%= datas.alamat %></td>
        <td>
          <a href="/users/delete/<%= datas.nama %>" onclick="return confirm('Anda Yakin ?')">
            <button class="btn btn-danger badge">Hapus Data</button>
          </a>
          <br />
          <a href="/users/edit/<%= datas.id %>">
            <button class="btn btn-warning badge">Edit Data</button>
          </a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
