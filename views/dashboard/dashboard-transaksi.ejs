<div class="container p-3" style="margin-top: 2em">
  <div class="row d-flex justify-content-evenly align-items-center mb-5">
    <div class="col-6">
      <h5 class="fw-bold">Halaman Panel Admin</h5>
      <p>Cari data terkait</p>
      <form action="/transaksi/search" method="post">
        <div class="row">
          <div class="col">
            <input type="text" name="search" class="form-control" />
          </div>
          <div class="col">
            <button class="btn btn-success">Search</button>
          </div>
        </div>
      </form>
    </div>
    <div class="col-6 text-end">
      <h4>Tambah Data Products</h4>
      <p>
        Link <span><a href="/transaksi/add" class="text-primary">Tambah Data Transaksi</a></span>
      </p>
    </div>
  </div>

  <table class="table mt-3">
    <thead class="table-success">
      <tr>
        <th scope="col">No</th>
        <th scope="col">Nama</th>
        <th scope="col">Email</th>
        <th scope="col">Nomor Telepon</th>
        <th scope="col">Alamat</th>
        <th scope="col">Judul Buku</th>
        <th scope="col">Harga Buku</th>
        <th scope="col">Sistem Pembayaran</th>
        <th scope="col">Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% i=1 %> <% result.forEach((datas) => { %>
      <tr>
        <td><%= i++ %></td>
        <td><%= datas.nama %></td>
        <td><%= datas.email %></td>
        <td><%= datas.nomor_telepon %></td>
        <td><%= datas.alamat %></td>
        <td><%= datas.judul_buku%></td>
        <td>Rp. <%= datas.harga%></td>
        <td><%= datas.sistem_pembayaran%></td>
        <td>
          <a href="/transaksi/delete/<%= datas.nama %> " onclick="return confirm('Anda yakin?')">
            <button class="btn btn-danger badge">Hapus Data</button>
          </a>
          <br />
          <a href="/transaksi/edit/<%= datas.id %> ">
            <button class="btn btn-warning badge">Edit Data</button>
          </a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
