<div class="container p-5 section-margin">
  <div class="row mb-5">
    <div class="col-6">
      <h4>Halaman Edit Users</h4>
      <p class="text-muted">Harap pastikan input user dengan benar</p>
    </div>
  </div>
  <form action="/products/edit" method="post">
    <input type="hidden" class="form-control" name="id" value="<%= result.id %>" id="id" placeholder="Masukkan ID" />
    <div class="mb-3">
      <label for="nama" class="form-label fw-bold">Nama Baru Users</label>
      <input type="text" class="form-control" name="nama" id="nama" placeholder="Masukkan Nama Baru..." />
    </div>
    <div class="mb-3">
      <label for="email" class="form-label fw-bold">Email users</label>
      <input type="text" class="form-control" name="email" id="email" placeholder="Masukkan email baru..." />
    </div>
    <div class="mb-3">
      <label for="password" class="form-label fw-bold">Password Baru</label>
      <input type="text" class="form-control" name="password" id="password" placeholder="Masukkan password baru..." />
    </div>
    <div class="mb-3">
      <label for="confirm" class="form-label fw-bold">Konfirmasi Ulang Password</label>
      <input type="text" class="form-control" name="confirm" id="confirm" placeholder="Masukkan confirm baru..." />
    </div>
    <button class="btn btn-success">Update Data</button>
  </form>
</div>
